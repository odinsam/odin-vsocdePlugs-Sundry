{
    "name": "sundry",
    "displayName": "sundry",
    "description": "sundry contains git-line-statistics",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/odinsam/odin-vsocdePlugs-Sundry"
    },
    "publisher": "odinsam",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/odinsam/odin-vsocdePlugs-Sundry/issues"
    },
    "homepage": "https://github.com/odinsam/odin-vsocdePlugs-Sundry#readme",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:sundry.codelinestatisticsView",
        "onCommand:sundry.codelinestatistics.statistics",
        "onCommand:sundry.codelinestatistics.clear"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "type": "webview",
                    "id": "sundry.codelinestatisticsView",
                    "name": "%extension.sundry.codeLineStatisticsViewName%"
                }
            ]
        },
        "commands": [
            {
                "command": "sundry.codelinestatistics.statistics",
                "category": "Sundry Code Line Statistics",
                "title": "%sundry.codelinestatistics.statistics.commandTitle%",
                "icon": "$(add)"
            },
            {
                "command": "sundry.codelinestatistics.clear",
                "category": "Sundry Code Line Statistics",
                "title": "%sundry.codelinestatistics.clear.commandTitle%",
                "icon": "$(clear-all)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "sundry.codelinestatistics.statistics",
                    "group": "navigation@1",
                    "when": "view == sundry.codelinestatisticsView"
                },
                {
                    "command": "sundry.codelinestatistics.clear",
                    "group": "navigation@2",
                    "when": "view == sundry.codelinestatisticsView"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "%sundry.codelinestatistics.configuration.Title%",
            "properties": {
                "sundry.codelinestatistics.statisticsType": {
                    "type": "array",
                    "default": [
                        ".cs\\",
                        ".html\\",
                        ".html\\",
                        ".java\\",
                        ".xml\\",
                        ".properties\\",
                        ".json\\"
                    ],
                    "items": [
                        ".cs\\",
                        ".html\\",
                        ".html\\",
                        ".java\\",
                        ".xml\\",
                        ".properties\\",
                        ".json\\"
                    ],
                    "markdownDescription": "statistics Type"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.12",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "better-than-before": "^1.0.0",
        "chai": "^4.2.0",
        "commitizen": "^3.1.1",
        "compare-func": "^1.3.2",
        "conventional-changelog-cli": "^2.0.21",
        "conventional-changelog-core": "^3.2.2",
        "coveralls": "^3.0.4",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^7.27.0",
        "git-dummy-commit": "^1.3.0",
        "github-url-from-git": "^1.5.0",
        "glob": "^7.1.7",
        "istanbul": "^0.4.5",
        "jscs": "^3.0.7",
        "jshint": "^2.10.2",
        "mocha": "^8.4.0",
        "q": "^1.5.1",
        "shelljs": "^0.8.3",
        "standard-version": "^9.3.0",
        "through2": "^3.0.1",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "dependencies": {
        "exec-sh": "^0.4.0"
    }
}
